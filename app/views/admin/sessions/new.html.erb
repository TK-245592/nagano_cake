<main>
<div class="container">

<div class="text-center mt-5 col-lg-3">
  <h4 class="text-black bg-secondary ">管理者ログイン</h4>
</div> 

<div lcass="form-horizontal" role="form">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-grop mt-5">
<div class="row justify-content-center">
   <label for="inputEmail" class="col-form-labrl col-sm-2" >メールアドレス</label>
   
<div class="col-sm-6">
<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
 </div>
</div>
 
 

  
    <div class="row justify-content-center  mt-3">
    <label for="inputPassword" class="col-sm-2 col-form-label">パスワード</label>
    <div class="col-sm-6">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
 </div>

  <div class="container-md mt-5 text-center">
    <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
</div>
</div>
</div>
</main>