<main>
    <div class="container">
  <div class="row ml-5">
    <div class="col-lg-4 text-center">
  <h4 class="text-black bg-secondary  mt-5 mb-5">ジャンル編集</h4>
  </div>
  </div>

<div class="row">
<div class="col-lg-2"> 
<%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
<label for="genre">ジャンル名</label>
</div> 
<div class="col-lg-3">
<%= f.text_field(:name, placeholder: "キャンディ") %>
</div>
<div class="col">
<%= f.submit '変更を保存', class: "btn btn-success" %>
<% end %>
</div>
</div>
</div>