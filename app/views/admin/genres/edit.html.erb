<h1>ジャンル編集画面</h1>

<%= form_with model: @genre, url: admin_genre_path(@genre.id), methoud: :patch do |f| %>
<h3>ジャンル名</h3>
<%= f.text_field :name %>
<%= f.submit '保存' %>
<% end %>
<%= link_to "ジャンル一覧", admin_genres_path %>
<%= link_to "削除", admin_genre_path, method: :delete, "data-confirm" => "本当に削除しますか？" %>
