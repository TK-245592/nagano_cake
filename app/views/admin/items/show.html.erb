<main>
    <div class="container">
      
  <div class="row ml-5">
    <div class="col-lg-4 text-center">
  <h4 class="text-black bg-secondary  mt-5 mb-5">商品詳細</h4>
  </div>
  </div>
  
  <div class="row">
  <div class="col-4">
  <%= image_tag @item.image %>
  </div>
  
 <div class="col-7">
  <div class="row mb-4">
   <div class="col-3">
    商品名
   </div>
  <div class="col-9">
   <%= @item.name %>
  </div>
 </div>
 
 <div class="row mb-4">
  <div class="col-3">
   商品説明  
  </div>
  <div class="col-9">
   <%= @item.introduction %>
  </div>
 </div>

 <div class="row mb-4">
  <div class="col-3">
   ジャンル
  </div>
  <div class="col-9">
   <%= @item.genre.name %>
  </div>
 </div>

 <div class="row mb-4">
  <div class="col-3">
   税込価格<br>(税抜価格)
  </div>
  <div class="col-9">
   <%= @item.with_tax_price.to_s(:delimited) %>（<%= @item.price.to_s(:delimited) %>）円
  </div>
 </div>
 
  <div class="row mb-4">
  <div class="col-3">
   販売ステータス
  </div>
  <div class="col-9">
  <% if @item.is_active == true %>
  <div class="col-7 text-success font-weight-bold">
  販売中
  </div>
<% else %>
<div class="col-7 text-secondary">
  販売停止中
  </div>
<% end %>
</div>
  </div>
 </div>
 
<div class="col text-center">
<%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
</main>
 











