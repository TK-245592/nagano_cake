<main>
  <div class="container">
<div class="text-center mt-5 col-lg-2">
  <h4 class="text-black bg-secondary ">商品一覧</h4>
</div>
<div class="col mb-3">
<div class=" text-right">
<%= link_to  new_admin_item_path, method: :get, class: "btn btn-light text-secondary fa-15" do %>
<i class="fas fa-plus-circle"></i>
<% end %>
</div>
</div>


<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
       <th>税抜価格</th>
        <th>ジャンル</th>
         <th>販売ステータス</th>
    </tr>
    </thead>
<% @items.each do |item| %>
<tbody>
<tr>
  <td>
    <%= item.id %>
    </td>
   <td>
     <%= link_to item.name, admin_item_path(item.id), class: "text-dark" %>
     </td>
    <td>
      <%= item.price %>
      </td>
     <td>
       <%= item.genre.name %>
       </td>
       <% if item.is_active == true %>
      <td class="text-success font-weight-bold">
        販売中
      </td>
     <% else %>
     <td class="text-secondary">
       販売停止中
     </td>
     <% end %>


        </tr>
        </tbody>
<% end %>
</tr>
</tbody>
</table>
<%= paginate @items %>
</div>
</main>