
<h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h1>

<p>会員ID</p>
<%= @customer.id %>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), methoud: :patch do |f| %>
<p>氏名</p>
<%= f.text_field :last_name %><%= f.text_field :first_name %>
<p>フリガナ</p>
<%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
<p>郵便番号</p>
<%= f.text_field :postal_code %>
<p>住所</p>
<%= f.text_area :address %>
<p>電話番号</p>
<%= f.text_field :telephone_number %>
<P>メールアドレス</P>
<%= f.text_field :email %>
<P>会員ステータス</P>
<label><%=f.radio_button :is_active, "true" %>有効</label>
<label><%=f.radio_button :is_active, "false" %>退会</label>
<%= f.submit "変更を保存" %>
<% end %>
