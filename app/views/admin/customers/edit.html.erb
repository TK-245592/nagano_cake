<main>
    <div class="container">

  <div class="row ml-5">
    <div class="col-lg-4 text-center">
  <h4 class="text-black bg-secondary  mt-5 mb-5"><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h4>
  </div>
  </div>

<div class="row mb-4">
  <div class="col-2">
    会員ＩＤ
  </div>
  <div class="col-3">
    <%= @customer.id %>
  </div>
</div>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>

<div class="row mb-4 ">
  <div class="col-2 ">
    氏名
  </div>
  <div class="col-2 mr-3">
    <%= f.text_field :last_name %>
  </div>
  <div class="col-2">
    <%= f.text_field :first_name %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-2">
    フリガナ
  </div>
  <div class="col-2 mr-3">
    <%= f.text_field :last_name_kana %>
  </div>
  <div class="col-2">
    <%= f.text_field :first_name_kana %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-2">
    郵便番号
  </div>
  <div class="col-3">
    <%= f.text_field :postal_code %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-2">
    住所
  </div>
  <div class="col-3">
    <%= f.text_field :address, size: "60" %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-2">
    電話番号
  </div>
  <div class="col-3">
    <%= f.text_field :telephone_number %>
  </div>
</div>

<div class="row mb-4">
  <div class="col-2">
  メールアドレス
  </div>
  <div class="col-3">
  <%= f.text_field :email%>
  </div>
</div>

<div class="row mb-4">
  <div class="col-2">
   会員ステータス
  </div>
  <div class="col-3">
<%= f.radio_button :is_active, "true" %>
<%= f.label :is_active, "有効" %>
<%= f.radio_button :is_active, "false" %>
<%= f.label :is_active, "無効" %>
  </div>
</div>


<div class="row mb-4">
  <div class="col-2">

  </div>
  <div class="col-3">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>
</div>
</div>
<% end %>



