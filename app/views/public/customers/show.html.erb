<main>
    <div class="container">
  <div class="row">
    <div class="col-lg-4　text-center">
  <h4 class="text-black bg-secondary  mt-5">マイページ</h4>
     </div>

  </div>
  <div class="row">
    <div class="col-2"><h4>登録情報</h4></div>
    <div class="col mb-4">
       <%= link_to "編集する", edit_public_customer_path(@customer), class:"btn btn-success" %>
    </div>
  </div>

  <div class="col-8">
  <table class="table-bordered">
    <tbody>
      <tr>
        <td class="table-active">氏名</td>
        <td><%= @customer.last_name + @customer.first_name %> </td>
      </tr>
      <tr>
      <td class="table-active">カナ</td>
      <td> <%= @customer.last_name_kana + @customer.first_name_kana %></td>
      </tr>
        <tr>
          <td class="table-active">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td class="table-active">住所</td>
           <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="table-active">電話番号</td>
           <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td class="table-active">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        </tbody>
  </table>
</div>

<div class="row mb-2">
<div class="col">
<h4>配送先</h4>
</div>
<div class="col">
<%= link_to "一覧を見る", public_addresses_path, class:"btn btn-primary" %>
</div>
</div>

<div class="row">
  <div class="col">
    <h4>注文履歴</h4>
  </div>
  <div class="col">
    <%= link_to "一覧を見る", public_orders_path, class:"btn btn-primary" %>
  </div>
</div>
 </div>
</main>
