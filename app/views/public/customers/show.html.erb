<main>
    <div class="container">
  <div class="row">
    <div class="col-lg-4　text-center">
  <h4 class="text-black bg-secondary  mt-5">マイページ</h4>
     </div>

  </div>
  <div class="row">
      <h4>登録情報</h4> <%= link_to "編集する", edit_public_customer_path(@customer) %>
  </div>

  <div class="row">
<div class="col-lg-2">
  氏名
  </div>
<div class="col-lg-6">
    <%= @customer.last_name %><%= @customer.first_name %>
    </div>
     </div>

