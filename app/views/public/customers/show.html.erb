<main>
    <div class="container">
  <div class="row">
    <div class="col-lg-4　text-center">
  <h4 class="text-black bg-secondary  mt-5">マイページ</h4>
     </div>

  </div>
  <div class="row">
    <div class="col-2"><h4>登録情報</h4></div>
    <div class="col">
       <%= link_to "編集する", edit_public_customer_path(@customer), class:"btn btn-primary" %> %>
    </div>
  </div>
  
  <table>
    <thead>
      <tr>
        <th>氏名</th>
        <th>カナ</th>
        <th>郵便番号</th>
        <th>住所</th>
        <th>電話番号</th>
        <th>メールアドレス</th>
      </tr>
    </thead>
  </table>

  <div class="row">
<div class="col-lg-2">
  氏名
  </div>
<div class="col-lg-6">
    <%= @customer.last_name %><%= @customer.first_name %>
    </div>
     </div>

<div class="row">
<div class="col-lg-2">
  カナ
</div>
<div class="col-lg-6">
    <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
    </div>
</div>

  <div class="row">
<div class="col-lg-2">
  郵便番号
</div>
<div class="col-lg-6">
<%= @customer.postal_code %>
    </div>
</div>

  <div class="row">
<div class="col-lg-2">
  住所
</div>
<div class="col-lg-6">
<%= @customer.address %>
    </div>
</div>

  <div class="row">
<div class="col-lg-2">
  電話番号
</div>
<div class="col-lg-6">
<%= @customer.telephone_number %>
    </div>
</div>

  <div class="row">
<div class="col-lg-2">
  メールアドレス
</div>
<div class="col-lg-6">
<%= @customer.email %>
    </div>
</div>

<h4>配送先</h4><%= link_to "一覧を見る", public_addresses_path %>
<h4>注文一覧</h4><%= link_to "一覧を見る" %>
 </div>
</main>
