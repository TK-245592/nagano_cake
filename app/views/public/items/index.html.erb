<main>
    <div class="container">
  <div class="row">
    <div class="col-lg-4　text-center">
  <h4 class="text-black bg-secondary  mt-5">商品一覧（全<%= @item %>件） </h4>
     </div>
     </div>


     
    <div class="row">
      <% @items.each do |item| %>
      <div class="col">
        <%= link_to  public_item_path(item.id) do %>
         <% end %>
        <%= image_tag item.image %>
      
      <div class="col">
        <%= item.name %>
      </div>
      <div class="col">
        ￥<%= item.price %>
      </div>
      </div>
      <% end %>
     </div>
<div class="row justify-content-center">
<div class="col-3">
<%= paginate @items %>
</div>
</div>
     </div>
     </div>
