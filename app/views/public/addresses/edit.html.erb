         </div>
     
         <div class="col">
         <label for="postal_code" class="form-label">住所</label>
       </div>
         <div class="col">
           <%= f.text_area :address %>
         </div>
     
         <div class="col">
         <label for="postal_code" class="form-label">宛名</label>
       </div>
