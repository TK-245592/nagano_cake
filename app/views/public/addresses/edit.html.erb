<main>
    <div class="container">
  <div class="row mb-4">
    <div class="col-lg-4　text-center">
  <h4 class="text-black bg-secondary  mt-5">配送先編集</h4>
     </div>
       </div>
         <%= form_with model: @address, url: public_address_path(@address.id), method: :patch do |f| %>
         
         <div class="row">
       <div class="col-3">
         郵便番号(ハイフンなし)
       </div>
         <div class="col">
           <%= f.text_field :postal_code %>
         </div>
         </div>
     
              <div class="row">
       <div class="col-3">
        住所
       </div>
         <div class="col">
          <%= f.text_field :address, size: 50 %>
         </div>
         </div>
         
      <div class="row">
       <div class="col-3">
        宛名
       </div>
         <div class="col">
           <%= f.text_field :name %>
         </div>
         <div class="col">
           <%=f.submit "変更内容を保存", class: "btn btn-success" %>
         </div>
          <% end %>
       </div>
       </div>
        </div>
