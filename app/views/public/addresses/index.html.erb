<main>
    <div class="container">
  <div class="row">
    <div class="col-lg-4 text-center">
  <h4 class="text-black bg-secondary  mt-5">配送先登録/一覧</h4>
     </div>
       </div>
       
     <%= form_with model: @address, url: public_addresses_path, method: :post do |f| %>
     <div class="form-gruop">
       
     <div class="row">
       <div class="col">
         <label for="postal_code" class="form-label">郵便番号（ハイフンなし）</label>
       </div>
         <div class="col">
           <%= f.text_field :postal_code %>
         </div>
     
         <div class="col">
         <label for="postal_code" class="form-label">住所</label>
       </div>
         <div class="col">
           <%= f.text_area :address %>
         </div>
     
         <div class="col">
         <label for="postal_code" class="form-label">宛名</label>
       </div>
         <div class="col">
           <%= f.text_field :name %>
         </div>
         <div class="col">
           <%=f.submit "新規登録", class: "btn btn-success btn-lg" %>
         </div>
          <% end %>
     </div>
     
     </div>
   
     
     <table class="table">
       <thead>
         <th>郵便番号</th>
         <th>住所</th>
         <th>宛名</th>
         <th></th>
       </thead>
       <tbody>
        <% @addresses.each do |address| %>
         <tr>
           <td>
             <%= address.postal_code %>
           </td>
           <td>
             <%= address.address %>
            </td>
            <td>
              <%= address.name %>
            </td>
            
            <td>
              <%= link_to "編集する", edit_public_address_path(current_customer.id) %>
              <%= link_to "削除する" %>
            </td>
         </tr>
            <% end %>
       </tbody>
     
     </table>
    
     

     
   
     </div>
     </main>

