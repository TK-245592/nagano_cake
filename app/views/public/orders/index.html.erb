<main>
    <div class="container">

  <div class="row">
    <div class="col-lg-4 text-center">
  <h4 class="text-black bg-secondary  mt-5">注文情報確認</h4>
  </div>

<table>
  <thead>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </thead>
  <tbody>
    <% @order.each do |order| %>
    <% @order_details.each do |order_detail| %>
    <tr>
      <th><%= order.created_at. strftime('%Y/%m/%d') %></th>
      <th>〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %>
      </th>
      <th><%= order_detail.item.name %></th>
      <th><%= order.billing_amount %></th>
      <th><%= order.order_status %></th>
      <th><%= link_to "表示する", public_order_path(order.id) , class: "btn btn-primary" %></th>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
