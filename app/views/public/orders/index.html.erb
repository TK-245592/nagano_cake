<main>
    <div class="container">

  <div class="row">
    <div class="col-lg-4 text-center">
  <h4 class="text-black bg-secondary  mt-5">注文情報確認</h4>
  </div>

<table>
  <thead>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </thead>
  <tbody>
    <% @order.each do |order| %>
    <tr>
      <th><%= order.created_at. strftime('%Y/%m/%d')</th>
      <th> 
          "〒"<%= order.postal_code %>
          <%= order.address %>
          <%= order.name %>
      </th>
      <th><%= order.cart_items.item_name %></th>
      <th></th>
      <th></th>
    </tr>
  </tbody>
</table>
