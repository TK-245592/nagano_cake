<main>
    <div class="container">
      
  <div class="row">
    <div class="col-lg-4 text-center">
  <h4 class="text-black bg-secondary  mt-5">注文情報確認</h4>
  </div>
  
  <table>
    <thead>
      <th>商品名</th>
       <th>単価（税込)</th>
        <th>数量</th>
         <th>小計</th>
    </thead>
    
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item_name %></td>
        <td><% cart_item.item_with_tax_price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %></td>
      </tr>
    </tbody>
  </table>
  
  <div class="table-responsive">
    <table>
      <thead>
        <tr>
          <th>送料</th>
          <th>商品合計</th>
          <th>請求金額</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td></td>
           <td><%= @total + cart.item.subtotal %></td>
            <td></td>
        </tr>
      </tbody>
    </table>
  </div>